<?xml version="1.0" encoding="UTF-8"?>
<site>
    <!-- global attributes -->
    <attributes>
        <attribute>templateBusinessPro.showEmotion</attribute>
        <attribute>templateBusinessPro.dontShowTitle</attribute>
        <attribute>templateBusinessPro.dontShowShort</attribute>
    </attributes>

    <settings>
        <category name="templateBusinessPro.siteSettings">
            <settings>
                <title>
                    <locale group="quiqqer/template-businesspro"
                            var="templateBusinessPro.siteSettings"/>
                </title>

                <input conf="templateBusinessPro.showEmotion" type="checkbox">
                    <text>
                        <locale group="quiqqer/template-businesspro"
                                var="templateBusinessPro.siteSettings.showEmotion"/>
                    </text>
                </input>
                <input conf="templateBusinessPro.dontShowTitle" type="checkbox">
                    <text>
                        <locale group="quiqqer/sitetypes" var="admin.types.titleAndShort.settings.title"/>
                    </text>
                </input>
                <input conf="templateBusinessPro.dontShowShort" type="checkbox">
                    <text>
                        <locale group="quiqqer/sitetypes" var="admin.types.titleAndShort.settings.short"/>
                    </text>
                </input>
            </settings>
        </category>
    </settings>


    <!-- layouts -->
    <layouts>
        <layout type="layout/startPage">
            <title>
                <locale group="quiqqer/template-businesspro" var="admin.layout.startpage" />
            </title>
            <description>
                <locale group="quiqqer/template-businesspro" var="admin.layout.startpage.desc" />
            </description>
        </layout>

        <layout type="layout/noSidebar">
            <title>
                <locale group="quiqqer/template-businesspro" var="admin.layout.noSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-businesspro" var="admin.layout.noSidebar.desc" />
            </description>
        </layout>

        <layout type="layout/leftSidebar">
            <title>
                <locale group="quiqqer/template-businesspro" var="admin.layout.leftSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-businesspro" var="admin.layout.leftSidebar.desc" />
            </description>
        </layout>

        <layout type="layout/rightSidebar">
            <title>
                <locale group="quiqqer/template-businesspro" var="admin.layout.rightSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-businesspro" var="admin.layout.rightSidebar.desc" />
            </description>
        </layout>
    </layouts>

</site>
