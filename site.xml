<?xml version="1.0" encoding="UTF-8"?>
<site>
    <!-- global attributes -->
    <attributes>
        <attribute>templateBusinessPro.showEmotion</attribute>
        <attribute>templateBusinessPro.showTitle</attribute>
        <attribute>templateBusinessPro.showShort</attribute>
    </attributes>

    <settings>
        <category name="templateBusinessPro.siteSettings">
            <settings>
                <title>
                    <locale group="quiqqer/template-businesspro"
                            var="templateBusinessPro.siteSettings"/>
                </title>

                <!-- show header -->
                <select conf="templateBusinessPro.showEmotion">
                    <text>
                        <locale group="quiqqer/template-businesspro"
                                var="siteSettings.showEmotion"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-businesspro"
                                var="siteSettings.showEmotion.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-businesspro"
                                var="siteSettings.showEmotion.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-businesspro"
                                var="siteSettings.showEmotion.hide"/>
                    </option>
                </select>

                <!-- show title -->
                <input conf="templateBusinessPro.showTitle" type="checkbox">
                    <text>
                        <locale group="quiqqer/template-businesspro" var="siteSettings.showTitle"/>
                    </text>
                </input>

                <!-- show short desc -->
                <input conf="templateBusinessPro.showShort" type="checkbox">
                    <text>
                        <locale group="quiqqer/template-businesspro" var="siteSettings.showShort"/>
                    </text>
                </input>
            </settings>
        </category>
    </settings>


    <!-- layouts -->
    <layouts>
        <layout type="layout/startPage"
                image="bin/layouts/startPage.png">
            <title>
                <locale group="quiqqer/template-businesspro" var="admin.layout.startpage" />
            </title>
            <description>
                <locale group="quiqqer/template-businesspro" var="admin.layout.startpage.desc" />
            </description>
        </layout>

        <layout type="layout/noSidebar"
                image="bin/layouts/noSidebar.png">
            <title>
                <locale group="quiqqer/template-businesspro" var="admin.layout.noSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-businesspro" var="admin.layout.noSidebar.desc" />
            </description>
        </layout>

        <layout type="layout/leftSidebar"
                image="bin/layouts/leftSidebar.png">
            <title>
                <locale group="quiqqer/template-businesspro" var="admin.layout.leftSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-businesspro" var="admin.layout.leftSidebar.desc" />
            </description>
        </layout>

        <layout type="layout/rightSidebar"
                image="bin/layouts/rightSidebar.png">
            <title>
                <locale group="quiqqer/template-businesspro" var="admin.layout.rightSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-businesspro" var="admin.layout.rightSidebar.desc" />
            </description>
        </layout>
    </layouts>

</site>
